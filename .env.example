# BIF-AI Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Update with AWS RDS info)
DB_HOST=localhost  # Replace with RDS endpoint
DB_PORT=3306
DB_NAME=bifai_db
DB_USER=bifai_admin  # RDS master username
DB_PASSWORD=your_secure_password_here  # RDS master password

# Redis Configuration (Update with ElastiCache info)
REDIS_HOST=localhost  # Replace with ElastiCache endpoint
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_key_minimum_64_characters_for_hs512_algorithm_here
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS Configuration (Optional - if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=bifai-images-prod

# Google Cloud (Optional - for Vision API)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Firebase (Optional - for Push Notifications)
FIREBASE_CONFIG_PATH=/path/to/firebase-config.json

# OAuth2 Configuration
OAUTH2_KAKAO_CLIENT_ID=
OAUTH2_KAKAO_CLIENT_SECRET=
OAUTH2_NAVER_CLIENT_ID=
OAUTH2_NAVER_CLIENT_SECRET=
OAUTH2_GOOGLE_CLIENT_ID=
OAUTH2_GOOGLE_CLIENT_SECRET=

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# File Storage (Choose one)
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/var/bifai/files

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=